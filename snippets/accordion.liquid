{{ 'accordion.css' | asset_url | stylesheet_tag }}
{%- assign uniqId = 0 | rand %}

{%- style -%}
  .accordion-wrapper-{{ uniqId }} .accordion {
    color: {{ text_color.hex }};
    margin-bottom: {{ space_bottom }}px;
    border-bottom: 1px solid {{ border_color.hex }};
  }
{%- endstyle -%}

<section class="accordion-wrapper-{{ uniqId }}">
  <div class="accordion">
    <div class='accordion-header'>
      <h1 class="title">{{ accordion_title }}</h1>
      <svg class="arrow" width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1.01947 7.41357L7.56174 1.50241L14.104 7.41357" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <div class="accordion-content">
      {{ accordion_details }}
    </div>
  </div>
</section>
