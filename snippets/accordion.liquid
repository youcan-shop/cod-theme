{{ 'accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .accordion {
    color: {{ text_color.hex }};
    margin-top: {{ space_top }}px;
  }
{%- endstyle -%}

<div class="accordion">
  <div class='accordion-header'>
    <div class='title-container'>
      <h2 class="title">{{ accordion_title }}</h2>
      {%- if accordion_title_icon -%}
        <img class='title-icon' loading='lazy' src='{{ accordion_title_icon }}'>
      {%- endif -%}
    </div>
    <svg class="arrow" width="15" height="9" viewBox="0 0 15 9" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M1.01947 7.41357L7.56174 1.50241L14.104 7.41357" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
  <div class="accordion-content">
    {{ accordion_details }}
  </div>
</div>
