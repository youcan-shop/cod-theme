<div class='product-quantity'>
  <label class="product-option-title" for='quantity'>{{ 'snippets.single_product.quantity' | t }}</label>
  <div class="quantity-field">
    <button class="increment-button"><ion-icon name="add-outline" size="small"></ion-icon></button>
    <input
      type='number'
      class='quantity-input'
      id='quantity'
      name='quantity'
      min='1'
      value='1'
    >
    <button class="decrement-button"><ion-icon name="remove-outline" size="small"></ion-icon></button>
  </div>
</div>

