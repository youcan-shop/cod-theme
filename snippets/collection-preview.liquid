<a
  href='/collections/{{ category.slug }}'
  class='collection-block'
  {{ block.youcan_attributes }}
>
  <div class='collection-thumbnail'>
    {% if category.image %}
      <img
        loading='lazy'
        src='{{ category.image }}'
      >
    {% else %}
      <img
        loading='lazy'
        src='{{ 'default_product.jpeg' | asset_url }}'
      >
    {% endif %}
  </div>
  <div class='collection-details'>
    <span class='collection-name'>{{ category.name }}</span>
    {% if style != 'simple' %}
      <button class="yc-btn">{{ 'list_collections.category-show' | t}}</button>
    {% endif %}
  </div>
</a>
