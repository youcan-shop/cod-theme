{% if last > 1 -%}
  <div class='yc-pagination-wrapper'>
    <a
      class='paginate-btn-prev {% if current <= 1 %} disabled {%- endif %}'
      href='{{ next_page }}'
    >
      <ion-icon
        name='arrow-back-outline'
        class='yc-btn-responsive-icon'
      ></ion-icon>
    </a>

    {% for index in (1..last) %}
      {% if index <= 2 or index >= last - 1 or index == current or (index >= current - 1 and index <= current + 1) %}
        {% if index != 1 and index != last and index != current + 1 and index != current - 1 %}
          <a class='paginate-btn'>...</a>
        {% endif %}
        <a
          class='paginate-btn {% if index == current %} active {%- endif %}'
          data-index='{{ index }}'
        >
          {{ index }}
        </a>
      {% endif %}
    {% endfor %}

    <a
      class='paginate-btn-next {% if current >= last %} disabled {%- endif %}'
      href='{{ previous_page }}'
    >
      <ion-icon
        name='arrow-forward-outline'
        class='yc-btn-responsive-icon'
      ></ion-icon>
    </a>
  </div>
{%- endif -%}

