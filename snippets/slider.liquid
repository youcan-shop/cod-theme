<div
  class='splide yc-slider__{{ view }} slider-container'
  id='yc_slider_{{ id }}'
>
  <div class='splide__track'>
    <ul class='splide__list'>
      {%- for block in blocks %}
        <li
          class='splide__slide'
          {{ block.youcan_attributes }}
        >
          <img 
            src='{%- if block.settings.image.src -%} {{ block.settings.image.src }} {%- else -%} {{ 'hero.jpg' | asset_url }} {%- endif -%}'
          >
          {%- if block.settings.caption %}
            <div class='content flex items-center h-full w-full'>
              <div class='container flex items-center justify-center'>
                <div>
                  <div class='caption'>{{ block.settings.caption }}</div>
                  {% if block.settings.product %}
                    <div class='btn-holder'>
                      <a
                        href='{{ block.settings.product.url }}'
                        class='yc-btn-slider'
                        style='font-weight: {{ block.settings.button_font_weight }}!important'
                      >
                        {{ block.settings.button_text }}
                      </a>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {%- endif %}
        </li>
      {%- endfor %}
    </ul>
  </div>
</div>
