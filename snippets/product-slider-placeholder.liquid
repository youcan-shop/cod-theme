{% assign max_index = 3 %}
{% if index == nil or index > max_index %}
  {% assign index = 0 %}
{% endif %}

{% assign random_titles = "Placeholder Product A,Placeholder Product B,Placeholder Product C" | split: "," %}
{% assign random_prices = "10.00,20.00,30.00" | split: "," %}

<div class='product-block product-slider-placeholder'>
  <div class='product-thumbnail'>
    {% assign svg_name = random_titles[index] %}
    {% render 'product-slider-placeholder-svg' %}
  </div>
  <div class='product-details'>
    <span class='product-title'>{{ random_titles[index] }}</span>
  </div>
  <div class='prices'>
    <span class='product-price'>{{ random_prices[index] | money }}</span>
  </div>
</div>
