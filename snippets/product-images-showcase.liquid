<section class='product-images {% if hidden %} hidden{% endif %}'>
  <div class='product-images-container'>
    <div class='thumbnail-images'>
      {% for image in images %}
        <div class="image-container" onmouseenter='previewProductImage(this)'>
          <img
            loading='lazy'
            src='{{ image }}'
            alt='{{ product.name }}'>
        </div>
      {% endfor %}
    </div>
    <div id='img-zoomer-box'>
      <img
        loading='lazy'
        class='main-image'
        class='main-thumbnail'
        src='{%- if images[0] %}{{images[0]}}{%- else %}{{ 'default_product.jpeg' | asset_url }}{% endif %}'
        alt='{{ product_name }}'>
      <div id='magnified-image'></div>
    </div>
  </div>
</section>
