<section class='product-images style{{showcase_style}}'>
  <div class='product-images-container'>
    <div id='img-zoomer-box'>
      <img
        id='main-image'
        class='main-thumbnail'
        src='{%- if images[0] %}{{images[0]}}{%- else %}{{'default_product.jpeg' | asset_url}}{% endif %}'
        alt='{{product_name}}'
      >
      <div id='magnified-image'></div>
    </div>

    <div class='thumbnail-images'>
      {% for image in images %}
        <img
          onclick='previewProductImage(this)'
          src='{{image}}'
          alt='{{product.name}}'
        >
      {% endfor %}
    </div>
  </div>
</section>
