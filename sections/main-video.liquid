{{ 'video.css' | asset_url | stylesheet_tag }}

{% style %}
.video-wrapper {
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
}

.youtube-play-button {
  background-color: {{ section.settings.play_button_background_color.hex }};
}
{% endstyle %}

<div class='video-wrapper container'>
  {% if section.settings.video_link %}
    {% if section.settings.video_type == 'youtube' %}
      <div id='youtube-video' class='youtube-video' data-video-link="{{ section.settings.video_link }}">
        <img class='youtube-thumbnail' src='' loading='lazy'>
        <div class='youtube-play-button'></div>
        <div class="spinner video-spinner"></div>
      </div>
    {% endif %}
    {% if section.settings.video_type == 'facebook' %}
      <iframe
        id='facebook-video'
        height='{{ section.settings.video_height }}'
        src='https://www.facebook.com/plugins/video.php?height=314&href=https%3A%2F%2Fwww.facebook.com%2FAymanJadaofficial%2Fvideos%2F1344326396104890%2F&show_text=false&width=560&t=0'
        style='border:none;overflow:hidden'
        scrolling='no'
        frameborder='0'
        allowfullscreen='true'
        allow='autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share'
        allowFullScreen='true'
      ></iframe>
    {% endif %}
  {% endif %}
</div>

<script>
  const width = {{ section.settings.video_width }} * (window.innerWidth / 100);
  const height = {{ section.settings.video_height }};
  const videoLink = '{{ section.settings.video_link }}';
  const videoType = '{{ section.settings.video_type }}';
  const defaulVideotImage = '{{ 'video_default_image.jpg' | asset_url }}';
</script>


{{ 'video.js' | asset_url | script_tag_deferred }}

{% schema %}
  {
    "label": "Video",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "select",
        "id": "title_position",
        "label": "Title Position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "video_type",
        "label": "Video Type",
        "options": [
          {
            "value": "youtube",
            "label": "Youtube"
          },
          {
            "value": "facebook",
            "label": "Facebook"
          }
        ]
      },
      {
        "type": "text",
        "id": "video_link",
        "label": "Video Link",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "range",
        "id": "video_height",
        "label": "Video Height",
        "min": 100,
        "max": 1000,
        "step": 10,
        "unit": "px",
        "default": 500
      },
      {
        "type": "range",
        "id": "video_width",
        "label": "Video Width's Percentage",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "%",
        "default": 100
      },
      {
        "type": "color",
        "id": "play_button_background_color",
        "label": "Youtube play icon color",
        "default": "#BDBDBDFF"
      },
      {
        "type": "range",
        "id": "margin_top",
        "label": "Space top",
        "min": 5,
        "max": 160,
        "step": 1,
        "unit": "px",
        "default": 20

      },
      {
        "type": "range",
        "id": "margin_bottom",
        "label": "Space bottom",
        "min": 5,
        "max": 160,
        "step": 1,
        "unit": "px",
        "default": 20
      }
    ]
  }
  {% endschema %}
