{% schema %}
  {
    "label": "Video",
    "settings": [
      {
        "type": "select",
        "id": "video_type",
        "label": "Video Type",
        "options": [
          {
            "value": "youtube",
            "label": "Youtube"
          },
          {
            "value": "facebook",
            "label": "Facebook"
          }
        ]
      },
      {
        "type": "text",
        "id": "video_link",
        "label": "Video Link",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "range",
        "id": "video_height",
        "label": "Video Height",
        "min": 100,
        "max": 1000,
        "step": 10,
        "unit": "px",
        "default": 500
      },
      {
        "type": "range",
        "id": "video_width",
        "label": "Video Width's Percentage",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "%",
        "default": 100
      }
    ]
  }
  {% endschema %}
  