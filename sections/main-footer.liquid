{{ 'footer.css' | asset_url | stylesheet_tag }}

{% style %}
  :root  {
    --yc-footer-background-color: {%- if section.settings.footer_background_color -%}
      {{ section.settings.footer_background_color.hex }}
    {%- else -%}
      var(--yc-primary-color){%- endif -%};
    --yc-footer-text-color: {{ section.settings.footer_text_color.hex }}
    ;
    --yc-footer-copyright-background: {{ section.settings.footer_copyright_background.hex }}
    ;
  }
{% endstyle %}

<footer class='yc-footer mt-24'>
  <div class='columns container'>
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'copyright' -%}
          <div
            class='copyright'
            {{ block.youcan_attributes }}
          >
            {%- for item in block.settings -%}
              <div class='block whitespace-pre-wrap leading-8'>{{ item.1 }}</div>
            {%- endfor %}
          </div>
        {%- else -%}
          <div class='column'>
            <div
              class='parsed-links'
              {{ block.youcan_attributes }}
            >
              {%- for item in block.settings -%}
                {% case item.0 %}
                  {% when 'block-title' %}
                    <h1 class='title block'>{{ item.1 }}</h1>
                  {% when 'description' %}
                    <p>{{ item.1 }}</p>
                  {%- else %}
                    <a class='item block whitespace-pre-wrap leading-8 -mt-1'>{{ item.1 }}</a>
                {% endcase %}
              {%- endfor %}
            </div>
          </div>
      {%- endcase %}
    {%- endfor %}
  </div>
</footer>

{{ 'footer.js' | asset_url | script_tag_deferred }}

