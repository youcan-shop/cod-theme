{{ 'footer.css' | asset_url | stylesheet_tag }}
<footer class='yc-footer mt-24'>
  <div class='grid grid-cols-1 md:grid-cols-3 gap-10 container pb-7 pt-14'>
    {%- for block in section.blocks -%}
      <div>
        {%- case block.type -%}
          {%- when 'privacy' -%}
            <div
              class='parsed-links'
              {{ block.youcan_attributes }}
            >
              {%- for item in block.settings -%}
                {%- if item.0 == "block-title" -%}
                  <h1 class='title block'>{{ item.1 }}</h1>
                {%- else %}
                  <a class='item block'>{{ item.1 }}</a>
                {%- endif %}
              {%- endfor %}
            </div>
          {%- when 'social' -%}
            <div
              class='parsed-links'
              {{ block.youcan_attributes }}
            >
              {%- for item in block.settings -%}
                {%- if item.0 == "block-title" -%}
                  <h1 class='title block'>{{ item.1 }}</h1>
                {%- else %}
                  <a class='item block'>{{ item.1 }}</a>
                {%- endif %}
              {%- endfor %}
            </div>
          {%- when 'contact' -%}
            <div {{ block.youcan_attributes }}>
              {%- for item in block.settings -%}
                {%- if item.0 == "block-title" -%}
                  <h1 class='title block'>{{ item.1 }}</h1>
                {%- else %}
                  <div class='item block whitespace-pre-wrap leading-8 -mt-1'>{{ item.1 }}</div>
                {%- endif %}
              {%- endfor %}
            </div>
          {%- when 'copyright' -%}
            <div
              class='copyright'
              {{ block.youcan_attributes }}
            >
              {%- for item in block.settings -%}
                <div class='block whitespace-pre-wrap leading-8'>{{ item.1 }}</div>
              {%- endfor %}
            </div>
        {%- endcase %}
      </div>
    {%- endfor %}
  </div>
</footer>

