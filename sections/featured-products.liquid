{% assign id = 100 | rand: 2000 %}

{% style %}
  .section-featured-products-{{id}} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .section-featured-products-{{id}} .yc-section-title {
    text-align: {{ section.settings.section_title_position }}
  }

  .product-item-{{id}} {
    border: 1px solid #E7E7E7;
    border-radius: 4px;
  }

  .section-featured-products-{{id}} * {
    color: {{ section.settings.text_color.hex }};
  }

  .section-featured-products-{{id}} .countdown-wrapper .countdown .sec .num {
    border-color: {{ section.settings.text_color.hex }};
  }

  .section-featured-products-{{id}} .product-container-{{id}} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
  }


  @media screen and (max-width: 768px) {
    .section-featured-products-{{id}} .product-container-{{id}} {
      grid-template-columns: repeat({{ section.settings.rows_mobile }}, minmax(0, 1fr)) !important;
    }
  }

  .product-container-{{id}} .product-title {
    {% if section.settings.show_product_title == false %}
      display: none;
    {% endif %}
  }
{% endstyle %}

<div class='yc-featured-products section-featured-products-{{id}} container'>
    <h1 class='yc-section-title'>
      {{ section.settings.title }}
    </h1>
    <div class='product-list product-container-{{id}}'>
      {%- for block in section.blocks -%}
        <div {{ block.youcan_attributes }} class="product-item-{{id}}">
          {%- render 'product-preview', item: block.settings.product, block_settings: block.settings -%}
        </div>
      {%- endfor -%}
    </div>
</div>

{%- schema -%}
{
  "label": "Featured products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "section_title_position",
      "label": "Title position",
      "options": [
        {
          "label": "left",
          "value": "left"
        },
        {
          "label": "right",
          "value": "right"
        },
        {
          "label": "center",
          "value": "center"
        }
      ]
    },
    {
      "type": "select",
      "id": "rows_mobile",
      "label": "Number of rows on mobile",
      "options": [
        {
          "value": "1",
          "label": "1 Rows"
        },
        {
          "value": "2",
          "label": "2 Rows"
        }
      ],
      "default": "2"
    },
    {
      "type": "checkbox",
      "id": "show_product_title",
      "label": "Show product title",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "checkbox",
      "id": "show_compare_at_price",
      "label": "Show compare at price",
      "default": true
    }
  ],
  "blocks": [
    {
      "label": "Product",
      "type": "product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "tag_text",
          "label": "Banner text"
        },
        {
          "type": "color",
          "id": "tag_color",
          "label": "Banner color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "tag_text_color",
          "label": "Banner text color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "tag_position",
          "label": "Banner position",
          "options": [
            {
              "label": "Top Right",
              "value": "top_right"
            },
            {
              "label": "Top Left",
              "value": "top_left"
            },
            {
              "label": "Bottom Right",
              "value": "bottom_right"
            },
            {
              "label": "Bottom Left",
              "value": "bottom_left"
            }
          ],
          "default": "top_right"
        }
      ]
    }
  ]
}
{%- endschema -%}
