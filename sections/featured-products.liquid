{% assign id = 100 | rand: 2000 %}

{% style %}
  .section-featured-products-{{id}}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .section-featured-products-{{id}} .yc-section-title{
    text-align: {{ section.settings.section_title_position }}
  }
{% endstyle %}

<div class='yc-featured-products section-featured-products-{{id}} container'>
  <h1 class='yc-section-title'>
    {{ section.settings.title }}
  </h1>
  <div class='product-list'>
    {%- for block in section.blocks -%}
      <div {{ block.youcan_attributes }}>
        {%- render 'product-preview', item: block.settings.product, block_settings: block.settings -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{%- schema -%}
{
  "label": "Featured products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "section_title_position",
      "label": "Title position",
      "options": [
        {
          "label": "left",
          "value": "left"
        },
        {
          "label": "right",
          "value": "right"
        },
        {
          "label": "center",
          "value": "center"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "blocks": [
    {
      "label": "Product",
      "type": "product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "tag_text",
          "label": "Banner text"
        },
        {
          "type": "color",
          "id": "tag_color",
          "label": "Banner color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "tag_text_color",
          "label": "Banner text color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "tag_position",
          "label": "Banner position",
          "options": [
            {
              "label": "Top Right",
              "value": "top_right"
            },
            {
              "label": "Top Left",
              "value": "top_left"
            },
            {
              "label": "Bottom Right",
              "value": "bottom_right"
            },
            {
              "label": "Bottom Left",
              "value": "bottom_left"
            }
          ],
          "default": "top_right"
        }
      ]
    }
  ]
}
{%- endschema -%}
