{% assign id = 100 | rand: 2000 %}

{{ 'product-column.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #product-column-{{ id }} {
    padding-top: {{ section.settings.space_top}}px;
    padding-bottom: {{ section.settings.space_bottom}}px;
  }

  #product-column-{{ id }} .product-images-container {
    background-color: {{ section.settings.background_color.hex }};
  }

  @media screen and (max-width: 768px) {
    #product-column-{{ id }} {
      display: {% if section.settings.show_product %}block{% else %}none{% endif %};
    }
  }

{%- endstyle -%}

<section class='product-column' id="product-column-{{ id }}">
  {%- assign selected_product = section.settings.product %}

  {%- if product %}
    {%- assign selected_product = product %}
  {%- endif %}

  {%- if selected_product %}
    {%- render 'product-home', product_id: selected_product.id, product: selected_product, block_settings: section.settings-%}
  {%- endif %}
</section>

{%- schema -%}
  {
    "label": "Product column",
    "settings": [
      {
        "label": "Product",
        "id": "product",
        "type": "product"
      },
      {
        "type": "checkbox",
        "id": "show_compare_at_price",
        "label": "Show compare at price",
        "default": false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color"
      },
      {
        "type": "checkbox",
        "id": "show_product",
        "label": "Show product on mobile",
        "default": true
      },
      {
        "type": "number",
        "id": "space_top",
        "label": "Space top",
        "default": 10
      },
      {
        "type": "number",
        "id": "space_bottom",
        "label": "Space bottom",
        "default": 10
      },
      {
          "type": "text",
          "id": "tag_text",
          "label": "Banner text"
        },
        {
          "type": "color",
          "id": "tag_color",
          "label": "Banner background color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "tag_text_color",
          "label": "Banner text color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "tag_position",
          "label": "Banner position",
          "options": [
            {
              "label": "Top right",
              "value": "top_right"
            },
            {
              "label": "Top left",
              "value": "top_left"
            },
            {
              "label": "Bottom right",
              "value": "bottom_right"
            },
            {
              "label": "Bottom left",
              "value": "bottom_left"
            }
          ],
          "default": "top_right"
        }
    ],
    "blocks": [
      {
        "label": "Title",
        "limit": 1,
        "type": "product_title"
      },
      {
        "label": "Price",
        "limit": 1,
        "type": "product_price"
      },
      {
        "label": "Description",
        "limit": 1,
        "type": "product_description"
      }
    ]
  }
{%- endschema -%}


{{ 'product.js' | asset_url | script_tag_deferred }}
