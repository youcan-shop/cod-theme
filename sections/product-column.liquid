{% assign id = 100 | rand: 2000 %}

{{ 'product-column.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .product_customization-{{ id }} {
    padding-top: {{ section.settings.space_top}}px;
    padding-bottom: {{ section.settings.space_bottom}}px;
  }

    {% if section.settings.show_description_on_mobile == false %}
      @media screen and (max-width: 768px) {
        .product-column-description {
          display: none;
        }
      }
    {% endif %}

  .product_customization-{{ id }} {
    background-color: {{ section.settings.background_color.hex }};
  }

{%- endstyle -%}

<section class='product_customization-{{ id }}'>
  {%- assign selected_product = section.settings.product %}

  {%- if product %}
    {%- assign selected_product = product %}
  {%- endif %}

  {%- if selected_product %}
    {%- render 'product-home', product_id: selected_product.id, product: selected_product, block_settings: section.settings-%}
  {%- endif %}
</section>

{%- schema -%}
  {
    "label": "Product column",
    "settings": [
      {
        "label": "Product",
        "id": "product",
        "type": "product"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Product description"
      },
      {
        "type": "checkbox",
        "id": "show_description_on_mobile",
        "label": "Sow description on mobile",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_compare_at_price",
        "label": "Show compare at price",
        "default": true
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color"
      },
      {
        "type": "range",
        "id": "space_top",
        "label": "Space top",
        "min": 5,
        "max": 160,
        "step": 1,
        "unit": "px",
        "default": 10
      },
      {
        "type": "range",
        "id": "space_bottom",
        "label": "Space bottom",
        "min": 5,
        "max": 160,
        "step": 1,
        "unit": "px",
        "default": 10
      },
      {
          "type": "text",
          "id": "tag_text",
          "label": "Banner text"
        },
        {
          "type": "color",
          "id": "tag_color",
          "label": "Banner background color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "tag_text_color",
          "label": "Banner text color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "price_reduction_text",
          "label": "Banner price text"
        },
        {
          "type": "color",
          "id": "tag_price_color",
          "label": "Price reduction background color",
          "default": "#E52B2AFF"
        },
        {
          "type": "color",
          "id": "price_reduction_text_color",
          "label": "Price reduction text color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "tag_position",
          "label": "Banner position",
          "options": [
            {
              "label": "Top right",
              "value": "top_right"
            },
            {
              "label": "Top left",
              "value": "top_left"
            },
            {
              "label": "Bottom right",
              "value": "bottom_right"
            },
            {
              "label": "Bottom left",
              "value": "bottom_left"
            }
          ],
          "default": "top_right"
        },
        {
      "type": "header",
      "content": "Countdown settings"
    },
    {
      "type": "paragraph",
      "content": "ℹ️ If you want to show countdown on this section, please enable it and set the date and time."
    },
    {
      "type": "checkbox",
      "id": "countdown_enabled",
      "label": "Enable countdown"
    },
    {
      "label": "Year",
      "id": "countdown_year",
      "type": "number",
      "default": 0
    },
    {
      "label": "Month",
      "id": "countdown_month",
      "type": "number",
      "default": 0
    },
    {
      "label": "Day",
      "id": "countdown_day",
      "type": "number",
      "default": 0
    },
    {
      "label": "Hour",
      "id": "countdown_hour",
      "type": "number",
      "default": 0
    },
    {
      "label": "Minutes",
      "id": "countdown_minute",
      "type": "number",
      "default": 0
    },
     {
      "type": "checkbox",
      "id": "show_compare_at_price",
      "label": "Show compare at price",
      "default": true
    }
    ],
    "blocks": [
      {
        "label": "Title",
        "limit": 1,
        "type": "product_title"
      },
      {
        "label": "Price",
        "limit": 1,
        "type": "product_price"
      }
    ]
  }
{%- endschema -%}
