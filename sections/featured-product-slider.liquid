

{% assign id = 100 | rand: 2000 %}

{% style %}
  .section-featured-products-{{id}} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .section-featured-products-{{id}} .yc-section-title {
    text-align: {{ section.settings.section_title_position }}
  }
  .section-featured-products-{{id}} {
    {% if section.settings.background_image.src %}
    background-image: url({{ section.settings.background_image.src }});
    {% elsif section.settings.background_color.hex %}
    background-color: {{ section.settings.background_color.hex }};
    {% endif %}
    background-repeat: repeat;
    background-position: center;
    background-size: 10rem;
  }
  .section-featured-products-{{id}} * {
    color: {{ section.settings.text_color.hex }};
  }
  .section-featured-products-{{id}} .countdown-wrapper .countdown .sec .num {
    border-color: {{ section.settings.text_color.hex }};
  }

  #yc_slider_{{ id }} .splide__arrow {
    background: {{ section.settings.slider_desktop_arrows_background_color.hex }} !important;
    width: 54px;
    height: 54px;
    margin: 0 100px;
  }

  #yc_slider_{{ id }} .splide__arrow--next {
    border-radius: 0 8px 8px 0;
  }

  #yc_slider_{{ id }} .splide__arrow--prev {
    border-radius: 8px 0 0 8px;
  }

  #yc_slider_{{ id }} .splide__arrow svg {
    height: {{ section.settings.slider_arrows_content_size }}px;
    width: {{ section.settings.slider_arrows_content_size }}px;
    background-color: {{ section.settings.slider_mobile_arrows_background_color.hex }};
  }
  
  .yc-slider__desktop .content {
    background-color: {{ section.settings.slider_overlay_background_color.hex }};
  }

  .yc-slider__mobile .content {
    background-color: {{ section.settings.slider_mobile_overlay_background_color.hex }};
  }
{% endstyle %}

{{ 'splide.min.css' | asset_url | stylesheet_tag }}
{{ 'desktop-slider.css' | asset_url | stylesheet_tag }}
{{ 'mobile-slider.css' | asset_url | stylesheet_tag }}
{{ 'splide.min.js' | asset_url | script_tag }}

<div class='yc-featured-products section-featured-products-{{id}}'>
  <div class="container">
    <!-- prettier-ignore -->
    {% if section.settings.countdown_enabled %}
      {%- render 'countdown', section_settings: section.settings -%}
    {% endif %}
    <h1 class='yc-section-title'>
      {{ section.settings.title }}
    </h1>
    <div
        class='splide yc-slider__{{ view }}'
        id='yc_slider_{{ id }}'
      >
    <div class='splide__track'>
      <ul class='splide__list'>
        {%- for block in section.blocks -%}
             <li
              class='splide__slide'
              {{ block.youcan_attributes }}
            >
                {%- render 'product-slider', item: block.settings.product, block_settings: block.settings -%}
            </li>
        {%- endfor -%}
      </ul>
      </div>
    </div>
</div>
</div>

<script>
  const isMobile1 = window.matchMedia("(max-width: 760px)");

  const desktopSlider1 = new Splide(`#yc_slider_{{ id }}.yc-slider__desktop`, {
    type: '{{ section.settings.slider_transition_type }}',
    arrows: '{{ section.settings.slider_arrows }}' ? true : false,
    autoplay: '{{ section.settings.slider_autoplay }}' ? true : false,
    cover: true,
    pagination: '{{ section.settings.slider_pagination }}' ? true : false,
    pauseOnHover: '{{ section.settings.slider_pause_on_hover }}' ? true : false,
    pauseOnFocus: '{{ section.settings.slider_pause_on_focus }}' ? true : false,
    height: `{{ section.settings.slider_height_percentage }}vh`,
    interval: '{{ section.settings.slider_timeout | times: 1000 }}',
    focus: 'center',
    rewind: true,
    drag: 'free',
    snap: true,
    loop: true,
  });

  const mobileSlider1 = new Splide(`#yc_slider_{{ id }}.yc-slider__mobile`, {
    type: '{{ section.settings.slider_mobile_transition_type }}',
    autoplay: '{{ section.settings.slider_mobile_autoplay }}' ? true : false,
    cover: true,
    pagination: '{{ section.settings.slider_mobile_pagination }}' ? true : false,
    height: `{{ section.settings.slider_mobile_height_percentage }}vh`,
    interval: '{{ section.settings.slider_mobile_timeout | times: 1000 }}',
    focus: 'center',
    rewind: true,
    drag: 'free',
    snap: true,
    loop: true,
  });

  const mountSlider1 = () => {
    try {
      if (isMobile1.matches) return mobileSlider1.mount();
      
      return desktopSlider1.mount();
    } catch {
      return;
    }
  }

  mountSlider1();
  isMobile.addEventListener('change', mountSlider1);
</script>

