{% assign id = 100 | rand: 2000 %}

{% style %}
  #yc_slider_{{ id }} .splide__arrow {
    background: {{ section.settings.slider_mobile_arrows_background_color.hex }} !important;
  }

  #yc_slider_{{ id }} .splide__arrow svg {
    height: {{ section.settings.slider_arrows_content_size }}px;
    width: {{ section.settings.slider_arrows_content_size }}px;
  }
{% endstyle %}

{{ 'splide.min.css' | asset_url | stylesheet_tag }}
{{ 'mobile-slider.css' | asset_url | stylesheet_tag }}
{{ 'splide.min.js' | asset_url | script_tag }}

<div
  class='splide yc-slider__mobile'
  id='yc_slider_{{id}}'
>
  <div class='splide__track'>
    <ul class='splide__list'>
      {%- for block in section.blocks %}
        {%- if block.settings.image.src %}
          <li
            class='splide__slide'
            {{ block.youcan_attributes }}
          >
            <img
              loading='lazy'
              src='{{ block.settings.image.src }}'
            >
            {%- if block.settings.caption %}
              <div class='content flex items-center container h-full w-full'>
                <div class='px-3'>
                  <div class='caption'>{{ block.settings.caption }}</div>
                  {% if block.settings.product %}
                    <div class='btn-holder'>
                      <a
                        href='{{ block.settings.product.url }}'
                        class='yc-btn'
                        style='font-weight: {{ block.settings.button_font_weight }}!important'
                      >
                        {{ block.settings.button_text }}
                      </a>
                    </div>
                  {% endif %}
                </div>
              </div>
            {%- endif %}
          </li>
        {%- endif %}
      {%- endfor %}
    </ul>
  </div>
</div>

<script>
  var splide = new Splide(`#yc_slider_{{ id }}`, {
    type: '{{ section.settings.slider_mobile_transition_type }}',
    arrows: '{{ section.settings.slider_mobile_arrows }}' ? true : false,
    autoplay: '{{ section.settings.slider_mobile_autoplay }}' ? true : false,
    cover: '{{ section.settings.slider_mobile_image_size_cover }}' ? true : false,
    pagination: '{{ section.settings.slider_mobile_pagination }}' ? true : false,
    pauseOnHover: '{{ section.settings.slider_mobile_pause_on_hover }}' ? true : false,
    pauseOnFocus: '{{ section.settings.slider_mobile_pause_on_focus }}' ? true : false,
    height: `{{ section.settings.slider_mobile_height_percentage }}vh`,
    interval: '{{ section.settings.slider_timeout | times: 1000 }}',
    arrows: false,
    focus: 'center',
    rewind: false,
    drag: 'free',
    snap: true,
  });

  splide.mount();
</script>

{%- schema -%}
{
  "label": "Mobile Slider",
  "settings": [
    {
      "type": "range",
      "id": "slider_mobile_height_percentage",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Slider height",
      "default": 50
    },
    {
      "type": "range",
      "id": "slider_mobile_arrows_size",
      "min": 20,
      "max": 55,
      "step": 1,
      "unit": "px",
      "label": "Arrows Size",
      "default": 37
    },
    {
      "type": "range",
      "id": "slider_mobile_arrows_content_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Arrows Content Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "slider_timeout",
      "min": 1,
      "max": 15,
      "step": 1,
      "unit": "s",
      "label": "Timeout",
      "default": 5
    },
    {
      "type": "color",
      "id": "slider_mobile_arrows_background_color",
      "label": "Arrows Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "slider_mobile_image_size_cover",
      "label": "Make image as cover",
      "default": true
    },
    {
      "type": "select",
      "id": "slider_mobile_transition_type",
      "label": "Transition type",
      "options": [
        {
          "value": "slide",
          "label": "Slide"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "loop",
          "label": "Loop"
        }
      ],
      "default": "loop"
    },
    {
      "type": "checkbox",
      "id": "slider_mobile_autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slider_mobile_pause_on_hover",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slider_mobile_pause_on_focus",
      "label": "Pause on focus",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slider_mobile_pagination",
      "label": "Pagination",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slider_mobile_arrows",
      "label": "Arrows",
      "default": true
    }
  ],
  "blocks": [
    {
      "label": "Slider image",
      "limit": 6,
      "type": "image_picker",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "caption",
          "label": "Slider Content"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Link Button To Product"
        },
        {
          "type": "select",
          "id": "button_font_weight",
          "label": "Button Font Weight level",
          "options": [
            {
              "value": "100",
              "label": "100"
            },
            {
              "value": "200",
              "label": "200"
            },
            {
              "value": "300",
              "label": "300"
            },
            {
              "value": "400",
              "label": "400"
            },
            {
              "value": "500",
              "label": "500"
            },
            {
              "value": "600",
              "label": "600"
            },
            {
              "value": "700",
              "label": "700"
            },
            {
              "value": "800",
              "label": "800"
            },
            {
              "value": "900",
              "label": "900"
            }
          ],
          "default": "500"
        }
      ]
    }
  ]
}
{%- endschema -%}
