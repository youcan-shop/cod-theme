{%- style -%}
  :root {
    --yc-notice-height: {{ section.settings.notice_bar_height}}px;
    --yc-notice-font-size: {{ section.settings.notice_bar_content_font_size}}px;
    --yc-notice-text-color: {{ section.settings.notice_bar_content_text_color.hex}};
    --yc-notice-background-color: {{ section.settings.notice_bar_background_color.hex}};
    --yc-notice-above: {{ section.settings.notice_bar_above}}}
{%- endstyle -%}

{%- if settings.notice_bar_show %}
  <div class='yc-notice {%- if settings.notice_bar_above %} fixed {%- endif %}'>
    <div class='content'>{{ settings.notice_bar_content }}</div>
  </div>
{%- endif %}

{% schema %}
  {
    "label": "Notice Bar",
    "settings": [
      {
        "type": "text",
        "id": "notice_bar_content",
        "label": "Content",
        "default": "Special offer: free delivery, pay on delivery, faster and order now"
      },
      {
        "type": "range",
        "id": "notice_bar_height",
        "min": 60,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Height",
        "default": 60
      },
      {
        "type": "range",
        "id": "notice_bar_content_font_size",
        "min": 12,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Font Size",
        "default": 14
      },
      {
        "type": "checkbox",
        "id": "notice_bar_show",
        "label": "Show",
        "default": true
      }, {
        "type": "checkbox",
        "id": "notice_bar_above",
        "label": "Above the header",
        "default": false
      }, {
        "type": "color",
        "id": "notice_bar_content_text_color",
        "label": "Text color",
        "default": "#FFFFFF"
      }, {
        "type": "color",
        "id": "notice_bar_background_color",
        "label": "Background color",
        "default": "#803160"
      }
    ]
  }
{% endschema %}
