{% assign id = 100 | rand: 2000 %}

{% style %}
  .multi-column-{{ id }} {
    padding: 32px 0;
    padding-top: {{ section.settings.margin_top }}px;
    padding-bottom: {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.background_color.hex }};
    color: {{ section.settings.text_color.hex }};
  }

  .multi-column-{{ id }} .yc-section-title{
    text-align: {{ section.settings.section_title_position }};
    font-weight: 700;
    font-size: 26px;
  }

  .multi-column-{{ id }} .multi-column-blocks {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    grid-gap: 2vw;
    align-items: stretch;
  }

  .column-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .column-block .column-title {
    margin-top: 16px;
    font-weight: 700;
    font-size: 18px;
    color: #000000;
  }

  .column-block .column-description {
    margin: 12px auto;
    font-size: 15px;
    color: #000000;
    font-weight: 400;
    line-height: 24px;
  }

  .column-block .column-image {
    object-fit: contain;
    aspect-ratio: 1;
    width: 50px;
    height: 50px;
  }

  .column-image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 92px;
    height: 92px;
    border-radius: 50%;
    border: 1px solid #EBEBEB;
    padding: 15px;
  }

  @media only screen and (max-width: 576px) {
    .multi-column-{{ id }} .multi-column-blocks {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      align-items: start;
      row-gap: 16px;
    }

    .column-block .column-title {
        font-size: 15px;    
      }

    .column-image-wrapper {
      width: 75px;
      height: 75px;
    }
  }
{% endstyle %}

<div class='multi-column-{{ id }}'>
  <div class="container">
    {% if section.settings.title %}
    <h3 class='yc-section-title'>{{ section.settings.title }}</h3>
    {% endif %}
    
    <div class='multi-column-blocks'>
      {% for block in section.blocks %}
        {% assign block_setting = block.settings %}
        <div
          class='column-block'
          {{ block.youcan_attributes }}
        >
          {% if block_setting.image %}
          <div class="column-image-wrapper">
            <img
              class='column-image'
              src='{{ block_setting.image.src }}'
              loading='lazy'
            >
          </div>
          {% else %}
          <div class="column-image-wrapper">
            <img
              class='column-image'
              src='{{ 'default_product.jpeg' | asset_url }}'
              loading='lazy'
            >
          </div>

          {% endif %}
          {% if block_setting.heading %}
            <h4 class='column-title'>{{ block_setting.heading }}</h4>
          {% endif %}
          {% if block_setting.description %}
            <p class='column-description'>{{ block_setting.description }}</p>
          {% endif %}
          {% if block_setting.link_label %}
            <a
              class='yc-btn'
              href='{{ block_setting.link }}'
            >
              {{- block_setting.link_label -}}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "label": "Multi-column",
  "blocks": [
    {
      "type": "columnn",
      "label": "Column",
      "limit": 20,
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Heading"
        },
        {
          "id": "description",
          "type": "text",
          "label": "Description"
        },
        {
          "id": "link_label",
          "type": "text",
          "label": "Button label"
        },
        {
          "id": "link",
          "type": "text",
          "label": "Button link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_title_position",
      "label": "Title position",
      "options": [
        {
          "label": "left",
          "value": "left"
        },
        {
          "label": "right",
          "value": "right"
        },
        {
          "label": "center",
          "value": "center"
        }
      ]
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Space Top"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Space Bottom"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Number of columsn on mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1"
    }
  ]
}
{% endschema %}
