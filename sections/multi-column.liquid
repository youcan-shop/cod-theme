{% assign id = 100 | rand: 2000 %}

{% style %}
  .multi-column-{{ id }} {
    background-color: {{ section.settings.background_color.hex }};
    color: {{ section.settings.text_color.hex }};
    margin: {{ section.settings.space_top }}px auto {{ section.settings.space_bottom }}px auto;
    padding: 10px 0;
  }

  .multi-column-{{ id }} .multi-column-title {
    text-align: {{ section.settings.section_title_position }};
    font-weight: 700;
    font-size: 26px;
    margin-bottom: 24px;
  }

  .multi-column-{{ id }} .multi-column-blocks {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    padding: 10px 0;
    align-items: start;
    gap: 16px;

    @media screen and (min-width: 768px) {
      margin: 0 56px;
    }
  }

  .multi-column-{{ id }} .column-block {
    flex-direction: column;
    gap: 16px;
    text-align: start;
  }

  .multi-column-{{ id }} .column-block .column-title {
    margin-top: 18px;
    font-weight: 700;
    font-size: 18px;
    color: {{ section.settings.caption_color.hex }};
    line-height: 140%;
  }

  .multi-column-{{ id }} .column-block .column-description {
    margin-top: 12px;
    font-size: 14px;
    color: {{ section.settings.text_color.hex }};;
    font-weight: 400;
    line-height: 156%;
  }

  .multi-column-{{ id }} .column-block .column-image {
    object-fit: contain;
    aspect-ratio: 1;
    width: 100%;
    height: 100%;
  }

  .multi-column-{{ id }} .column-image-wrapper {
    display: block;
    width: 50px;
    height: 50px;
    flex-shrink: 0;
  }

  @media only screen and (min-width: 576px) {
    .multi-column-{{ id }} .multi-column-blocks {
      grid-template-columns: repeat(2, 1fr);
    }

    .multi-column-{{ id }} .column-block {
      border-bottom: unset !important;
    }
  }

  @media only screen and (min-width: 768px) {
    .multi-column-{{ id }} .multi-column-blocks {
      grid-template-columns: repeat(2, 1fr);
      gap: 2vw;
      align-items: stretch;
    }
  }

  @media only screen and (min-width: 800px) {
    .multi-column-{{ id }} .multi-column-blocks {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  @media only screen and (max-width: 768px) {
    .multi-column-{{ id }} .column-block {
      display: flex;
      flex-direction: row;
      gap: 24px;
      border-bottom: 1px solid #E0E0E0;
      padding-bottom: 24px;
    }

    .multi-column-{{ id }} .column-block:last-child {
      border: none;
    }

    .multi-column-{{ id }} .column-block .column-title {
      margin-top: 0;
    }

    {% if section.settings.columns_mobile == 2 %}
      .multi-column-{{ id }} .column-block {
        border: none;
      }
    {% endif %}
  }
{% endstyle %}

<div class='multi-column-{{ id }}'>
  <div class="container">
    <h3 class='multi-column-title'>{{ section.settings.title }}</h3>
    <div class='multi-column-blocks'>
      {% for block in section.blocks %}
        {% assign block_setting = block.settings %}
        <div
          class='column-block'
          {{ block.youcan_attributes }}
        >
          {% if block_setting.image %}
          <div class="column-image-wrapper">
            <img
              class='column-image'
              src='{{ block_setting.image.src }}'
              loading='lazy'
            >
          </div>
          {% else %}
          <div class="column-image-wrapper">
            <img
              class='column-image'
              src='{{ 'default_product.jpeg' | asset_url }}'
              loading='lazy'
            >
          </div>
          {% endif %}
          <div class="column-content">
            {% if block_setting.heading %}
              <h4 class='column-title'>{{ block_setting.heading }}</h4>
            {% endif %}
            {% if block_setting.description %}
              <div class='column-description'>{{ block_setting.description }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "label": "Multi-column",
  "templates": ["index", "product", "page"],
  "blocks": [
    {
      "type": "columnn",
      "label": "Column",
      "limit": 20,
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image",
          "info": "To ensure your images look great and load quickly, use a size of \"43px x 43px\" (1:1 aspect ratio)."
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Heading"
        },
        {
          "id": "description",
          "type": "richtext",
          "label": "Description"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000FF"
    },
    {
      "type": "color",
      "id": "caption_color",
      "label": "Caption color",
      "default": "#000000FF"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_title_position",
      "label": "Title position",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    {
      "type": "range",
      "id": "space_top",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Space top"
    },
    {
      "type": "range",
      "id": "space_bottom",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Space bottom"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Number of columns on desktop",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        },
        {
          "value": "3",
          "label": "3 columns"
        },
        {
          "value": "4",
          "label": "4 columns"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Number of columsn on mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1"
    }
  ]
}
{% endschema %}
