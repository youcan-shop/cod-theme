{% assign id = 100 | rand: 2000 %}

{% style %}
  .multi-column-{{ id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.background_color.hex }};
  }


  .multi-column-{{ id }} .product-column-title {
    text-align: {{ section.settings.section_title_position }};
    margin-bottom: 15px;
    font-weight: 700;
    font-size: 26px;
    color: {{ section.settings.title_text_color.hex }};
  }

  .multi-column-{{ id }} .multi-column-blocks {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    grid-gap: 3vw;
    align-items: stretch;
    padding: 10px 0;
  }

  .column-block {
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  .column-block .column-title {
    margin-top: 16px;
    font-weight: 700;
    font-size: 18px;
    color: #000000;
  }

  .column-block .column-description {
    margin: 12px auto;
    font-size: 14px;
    color: #000000;
    font-weight: 400;
    line-height: 24px;
  }

  .column-block .column-image {
    object-fit: contain;
    aspect-ratio: 1;
    width: 43px;
    height: auto;
  }

  .column-image-wrapper {
    display: flex;
    justify-content: center;
  }

  @media screen and (min-width: 1024px) {
    .multi-column-{{ id }} .multi-column-blocks {
      margin: auto 45px;
    }
  }

  @media only screen and (max-width: 600px) {
    .multi-column-{{ id }} .multi-column-blocks {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      align-items: start;
      row-gap: 16px;
    }

    .column-block .column-title {
        font-size: 15px;   
        margin-top: 0; 
      }

     .column-block {
        flex-direction: row;
        gap: 24px;
        border-bottom: 1px solid #E0E0E0;
        padding: 12px 0;
      }

      .column-block:last-child {
        border-bottom: none;
      }

    .column-image-wrapper {
      flex-shrink: 0;
    }
  }
{% endstyle %}

<div class='multi-column-{{ id }} container'>
    <h3 class='product-column-title'>{{ section.settings.title }}</h3>
    <div class='multi-column-blocks'>
      {% for block in section.blocks %}
        {% assign block_setting = block.settings %}
        <div
          class='column-block'
          {{ block.youcan_attributes }}
        >
          {% if block_setting.image %}
          <div class="column-image-wrapper">
            <img
              class='column-image'
              src='{{ block_setting.image.src }}'
              loading='lazy'
            >
          </div>
          {% else %}
          <div class="column-image-wrapper">
            <img
              class='column-image'
              src='{{ 'default_product.jpeg' | asset_url }}'
              loading='lazy'
            >
          </div>

          {% endif %}
          <div class="mobile-wrapper">
            {% if block_setting.heading %}
              <h4 class='column-title'>{{ block_setting.heading }}</h4>
            {% endif %}
            {% if block_setting.description %}
              <p class='column-description'>{{ block_setting.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
</div>

{% schema %}
{
  "label": "Multi-column",
  "blocks": [
    {
      "type": "columnn",
      "label": "Column",
      "limit": 20,
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "Heading"
        },
        {
          "id": "description",
          "type": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "color",
      "id": "title_text_color",
      "label": "Title color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_title_position",
      "label": "Title position",
      "options": [
        {
          "label": "left",
          "value": "left"
        },
        {
          "label": "right",
          "value": "right"
        },
        {
          "label": "center",
          "value": "center"
        }
      ]
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Space Top"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 5,
      "max": 160,
      "step": 1,
      "unit": "px",
      "label": "Space Bottom"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Number of columsn on mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1"
    }
  ]
}
{% endschema %}
