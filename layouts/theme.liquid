<!doctype html>
<html lang='en'>
	<head>
		{%- style -%}
			:root
			{
			  /* Notice bar */
			  --yc-notice-height: {{ settings.notice_bar_height}}px;
			  --yc-notice-font-size: {{ settings.notice_bar_content_font_size}}px;
			  --yc-notice-text-color: {{ settings.notice_bar_content_text_color.hex}};
			  --yc-notice-background-color: {{ settings.notice_bar_background_color.hex}};
			  --yc-notice-above: {{ settings.notice_bar_above}};

			  /* Slider */
			  --yc-slider-arrows-background: #fff;
			  --yc-slider-arrows-size: 37px;
			  --yc-slider-arrows-content-size: 14px;
			}
		{%- endstyle -%}

		{%- render 'head-config' -%}

		{{ content_for_header }}
	</head>
	<body>
		{{ content_for_layout }}

		{{ 'splide.min.js' | asset_url | script_tag }}
	</body>
</html>
